<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Gamemenu"
    android:background="@drawable/wallpapern">



    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="25dp"
        android:text="Marine Debris"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_light"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        android:textSize="25dp"
        android:fontFamily="monospace"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="54dp"
        android:text="Rescue"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_light"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        android:textSize="30dp"
        android:textStyle="bold"
        android:fontFamily="monospace"/>


    <TextView
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:layout_marginTop="110dp"
        android:text="Choose a level to play !"
        android:textAlignment="center"
        android:textColor="@android:color/black"
        android:textColorHighlight="@android:color/background_light"
        android:textFontWeight="@android:integer/config_mediumAnimTime"
        android:textSize="20dp"
        android:textStyle="bold"
        android:fontFamily="cursive"/>






    <Button
        android:layout_width="80dp"
        android:layout_height="60dp"

        android:layout_marginTop="160dp"
        android:id="@+id/easy"
        android:textSize="15dp"
        android:background="@drawable/easydo"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"

        ></Button>

    <TextView
        android:layout_width="60dp"
        android:layout_height="70dp"

        android:layout_centerHorizontal="true"

        android:layout_marginTop="150dp"
        android:id="@+id/easytext"
        android:textSize="15dp"
        android:text="Easy"

        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="monospace"

        ></TextView>


    <Button
        android:layout_width="90dp"
        android:layout_height="60dp"
        android:layout_marginTop="260dp"
        android:textSize="15dp"
        android:id="@+id/med"
        android:background="@drawable/smallpen"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        ></Button>


    <TextView
        android:layout_width="80dp"
        android:layout_height="70dp"


        android:layout_centerHorizontal="true"
        android:layout_marginTop="240dp"
        android:id="@+id/medtext"
        android:textSize="15dp"
        android:text="Medium"

        android:textColor="@android:color/black"
        android:textAlignment="center"
        android:textStyle="bold"
        android:fontFamily="monospace"

        ></TextView>


    <Button
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_marginTop="360dp"
        android:textSize="15dp"
        android:background="@drawable/sharkone"
        android:id="@+id/hard"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        ></Button>

    <TextView
        android:id="@+id/hardtext"
        android:layout_width="60dp"

        android:layout_height="70dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="340dp"
        android:fontFamily="monospace"
        android:text="Hard"
        android:textAlignment="center"
        android:textColor="@android:color/black"

        android:textSize="15dp"
        android:textStyle="bold"

        ></TextView>


    <Button
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_marginTop="420dp"
        android:text="Instructions"
        android:textSize="20dp"
        android:background="@drawable/bulble"
        android:id="@+id/menuback"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="casual"
        ></Button>


    <Button
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_marginTop="480dp"
        android:text="Share"
        android:textSize="20dp"
        android:background="@drawable/bulble"
        android:id="@+id/share"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:fontFamily="casual"
        ></Button>


    <com.google.android.gms.ads.AdView
        xmlns:ads="http://schemas.android.com/apk/res-auto"
        android:id="@+id/adView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        ads:adSize="BANNER"
        ads:adUnitId="ca-app-pub-7590533102332942/5178353410">
    </com.google.android.gms.ads.AdView>


</RelativeLayout>
